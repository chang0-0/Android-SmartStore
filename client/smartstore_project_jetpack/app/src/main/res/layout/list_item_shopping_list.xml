<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/border_bottom"
        >

    <ImageView
            android:id="@+id/menuImage"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:adjustViewBounds="true"
            android:src="@drawable/coffee1" />


    <TextView
            android:gravity="center"
            android:id="@+id/textShoppingMenuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아메리카노"
            android:textSize="16dp"
            android:layout_weight="1"
            style="@style/Text.Regular"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/menuImage"
            android:layout_marginStart="20dp" />

    <TextView
            android:id="@+id/textShoppingMenuMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4000원"
            android:textSize="12dp"
            android:layout_weight="1"
            style="@style/Text.Regular"
            app:layout_constraintTop_toBottomOf="@+id/textShoppingMenuName"
            app:layout_constraintStart_toStartOf="@+id/textShoppingMenuName"
            android:layout_marginTop="10dp" />

    <TextView
            app:layout_goneMarginEnd="20dp"
            android:id="@+id/textShoppingMenuMoneyAll"
            style="@style/Text.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="8000원"
            android:textSize="16dp"
            tools:layout_editor_absoluteY="80dp"
            app:layout_constraintStart_toStartOf="@+id/textShoppingMenuMoney" />

    <ImageView
            android:id="@+id/cancel"
            android:layout_gravity="right"
            android:layout_width="17dp"
            android:layout_height="20dp"
            android:background="@drawable/button_regular"
            app:backgroundTint="@null"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

    <TextView
            android:id="@+id/textShoppingMenuCount"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1잔"
            android:textSize="16dp"
            android:layout_weight="1"
            style="@style/Text.Regular"
            app:layout_constraintStart_toEndOf="@+id/textShoppingMenuMoneyAll"
            app:layout_constraintTop_toTopOf="@+id/textShoppingMenuMoneyAll"
            android:layout_marginStart="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>